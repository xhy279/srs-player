{
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "vite-env.d.ts",
        "examples/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples/srsplayer-demo/node_modules"
    ],
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "skipLibCheck": true
    }
}